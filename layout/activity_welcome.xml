<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_welcome"
    android:layout_height="match_parent">
    >
<Button
   android:text="@string/textbutton"
    android:layout_marginTop="20dp"
    android:textAllCaps="false"

    android:backgroundTint="@color/white"
    android:layout_marginLeft="310dp"
    android:textSize="10dp"
    android:textColor="#E91E63"
    android:layout_width="60dp"
    android:layout_height="wrap_content"/>
    <TextView
        android:textSize="45dp"
        android:fontFamily="@font/sofia_pro_semi_blod"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="35dp"
        android:layout_gravity="center"
        android:layout_marginTop="130dp"
        android:text="Welcome to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_marginTop="20dp"
        android:fontFamily="@font/sofia_regular"
        android:textSize="15dp"
        android:layout_marginLeft="60dp"
        android:text="Your favourite foods delivered "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView

        android:fontFamily="@font/sofia_regular"
        android:textSize="15dp"
        android:layout_marginLeft="60dp"
        android:text="fast at your door"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:gravity="center"
        android:text="__________________     sign in with     __________________"
        android:textSize="15sp" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ImageButton
        android:background="@drawable/btn1_login"
        android:layout_marginLeft="20dp"
        android:layout_width="210dp"
        android:layout_height="100dp"/>
        <ImageButton
            android:background="@drawable/btn_gg"
            android:layout_width="210dp"
            android:layout_height="100dp"/>

    </LinearLayout>
    <Button
        android:backgroundTint="#2D000000"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:text="Start with email or phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:textColor="@color/black"
        android:text="Already have an account?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button

        android:backgroundTint="#B5FFFFFF"
        android:textSize="10dp"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"
        android:textAllCaps="false"
        android:text="Sign In"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>